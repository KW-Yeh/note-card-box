# 正式環境 - Aurora PostgreSQL
# 部署時在 Vercel/AWS 設定這些環境變數

NEXT_PUBLIC_APP_NAME="Note Card Box"

# NextAuth
NEXTAUTH_SECRET="generate-new-secret-for-production"
NEXTAUTH_URL="https://your-domain.com"

# Google OAuth
GOOGLE_CLIENT_ID="your-production-client-id"
GOOGLE_CLIENT_SECRET="your-production-client-secret"

# Aurora PostgreSQL Serverless v2
AURORA_POSTGRESQL_USERNAME="postgres"
AURORA_POSTGRESQL_PASSWORD="your-aurora-password"
AURORA_POSTGRESQL_DB_NAME="postgres"
AURORA_POSTGRESQL_PORT="5432"
AURORA_POSTGRESQL_WRITE_HOST="your-cluster.cluster-xxx.region.rds.amazonaws.com"
AURORA_POSTGRESQL_READ_HOST="your-cluster.cluster-ro-xxx.region.rds.amazonaws.com"
